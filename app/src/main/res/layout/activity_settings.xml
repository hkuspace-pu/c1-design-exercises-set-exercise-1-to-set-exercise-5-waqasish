<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAF5">


    <View
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#FF6B35" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="20dp"
        app:cardBackgroundColor="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="32dp"
            android:text="Notification Settings"
            android:textColor="#FF6B35"
            android:textSize="30sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="90dp"
        android:layout_marginHorizontal="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="12dp"
            android:padding="24dp"
            android:layout_margin="8dp"
            android:translationZ="8dp"
            app:cardCornerRadius="24dp">

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchNewReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Reservation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchUpdatedReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Updated Reservation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchCancelledReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelled Reservation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchNewMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Item on Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchEditMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Item on Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="20dp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchDeleteMenuItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Item on Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:checked="true"
                android:layout_marginBottom="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#FF6B35"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:itemIconTint="#FF6B35"
        app:itemTextColor="#FF6B35"
        app:menu="@menu/staff_bottom_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>